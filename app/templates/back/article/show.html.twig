{% extends 'base-back.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <!-- Container for demo purpose -->
<div class="container my-24 px-6 mx-auto">
  
  <!-- Section: Design Block -->
  <section class="mb-32 text-gray-800">
    <div class="block rounded-lg shadow-lg bg-white">
      <div class="flex flex-wrap items-center">
        <div class="w-full">
          <img src="/img/{{ article.img }}" alt="Trendy Pants and Shoes" class="object-cover h-48 w-full rounded-t-lg lg:rounded-tr-none lg:rounded-bl-lg" />
        </div>
        <div class="grow-0 shrink-0 basis-auto w-full lg:w-6/12 xl:w-8/12">
          <div class="px-6 py-12 md:px-12">
            <h2 class="text-2xl font-bold mb-4">{{ article.title }}</h2>
            <p class="uppercase text-red-600 font-bold mb-6 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="w-4 h-4 mr-2">
                <!-- Font Awesome Pro 5.15.4 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) -->
                <path fill="currentColor"
                  d="M216 23.86c0-23.8-30.65-32.77-44.15-13.04C48 191.85 224 200 224 288c0 35.63-29.11 64.46-64.85 63.99-35.17-.45-63.15-29.77-63.15-64.94v-85.51c0-21.7-26.47-32.23-41.43-16.5C27.8 213.16 0 261.33 0 320c0 105.87 86.13 192 192 192s192-86.13 192-192c0-170.29-168-193-168-296.14z" />
                </svg>Hot news
            </p>
            <p class="text-gray-500 mb-6">
              {{ article.text }}
            </p>
            <p class="text-gray-500 mb-6">
            Lien: 
              {% if article.link != null%}
                    <a href="{{ article.link }}">
                        <button>{{ article.label }}</button>
                    </a>
                {% endif %}
            </p>
          </div>
          <div class="px-6 pt-4 pb-2">
            {% for tag in article.tags %}
                <div>
                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#{{ tag.label }}</span>
                </div>
            {% endfor %}
        </div>
        </div>
      </div>
    </div>
    <br>
    <div class="max-w-sm w-24 bg-white shadow sm:rounded-md overflow-hidden">
    <div class="px-6 py-4">
        <a href="{{ path('back_app_article_index') }}" class="no-underline hover:underline ...">Retour</a>
    </div>
</div>
  </section>
  <!-- Section: Design Block -->
</div>

{% endblock %}
