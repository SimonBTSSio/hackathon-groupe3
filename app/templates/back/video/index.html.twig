{% extends 'base-back.html.twig' %}

{% block title %}Video index{% endblock %}

{% block body %}

    <div class="mx-10">

        <h1 class="text-3xl text-center mt-10">Liste des vidéos</h1>
        <div class="flex mt-10 p-4 space-x-4">
            {% for video in videos %}
                <div class="border border-solid border-gray-500 w-fit p-4 rounded-lg" onclick="window.location.href='{{ path('back_app_video_show_details', {'id': video.id}) }}';">
                    <img src="{{ asset('build/images/images.jpeg') }}" alt="images">
                    <p class="text-center">{{ video.title }}</p>
                </div>
            {% else %}
                <tr>
                    <td colspan="7">Il n'y a aucune vidéo</td>
                </tr>
            {% endfor %}

        </div>
        <div class="flex justify-center">
            <a class="p-4 rounded-lg border-gray-500 border border-solid bg-blue-500 mt-10" href="{{ path('back_app_video_new') }}">Créer une nouvelle vidéo</a>
        </div>
    </div>
{% endblock %}

