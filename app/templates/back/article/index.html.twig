{% extends 'base-back.html.twig' %}

{% block title %}La liste des articles{% endblock %}

{% block body %}
    <div class="from-green-50 to-cyan-100">  
        <div class="container m-auto px-6 text-gray-600 md:px-12 xl:px-6">
            <h1 class="text-3xl text-black pb-6">Les articles</h1>

            <div class="w-full mt-12">
                <div class="flex flex-wrap -mx-3">
                    <div class="flex-none w-full max-w-full px-3">
                        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-soft-xl rounded-2xl bg-clip-border shadow-lg">
                            <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                                <h6>La liste des articles</h6>
                            </div>

                            <!-- component -->
                            <div class="overflow-x-auto rounded-lg border border-gray-200 shadow-md m-5">
                                <table class="w-full border-collapse bg-white text-left text-sm text-gray-500">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th scope="col" class="px-6 py-4 font-medium text-gray-900">Titre</th>
                                            <th scope="col" class="px-6 py-4 font-medium text-gray-900">Image</th>
                                            <th scope="col" class="px-6 py-4 font-medium text-gray-900">Description</th>
                                            <th scope="col" class="px-6 py-4 font-medium text-gray-900">Lien</th>
                                            <th scope="col" class="px-6 py-4 font-medium text-gray-900">Label</th>
                                            <th scope="col" class="px-6 py-4 font-medium text-gray-900">actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-100 border-t border-gray-100">
                                        {% for article in articles %}
                                            <tr class="hover:bg-gray-50">
                                                <td class="px-6 py-4">{{ article.title }}</td>
                                                <td class="px-6 py-4">{{ article.img }}</td>
                                                <td class="px-6 py-4">{{ article.text }}</td>
                                                <td class="px-6 py-4">{{ article.label }}</td>
                                                <td class="px-6 py-4">
                                                    {% for tag in article.tags %}
                                                        <div>
                                                            {{ tag.id }} - {{ tag.label }}
                                                        </div>
                                                    {% endfor %}
                                                </td>
                                                <td class="px-6 py-4">
                                                    <a href="{{ path('back_app_article_show', {'id': article.id}) }}">Voir</a><br>
                                                    <a href="{{ path('back_app_article_edit', {'id': article.id}) }}">Modifier</a>
                                                    {{ include('back/article/_delete_form.html.twig') }}
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="11">Pas encore d'article</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="max-w-sm w-48 bg-white rounded-2xl overflow-hidden shadow-lg">
                            <div class="px-6 py-4">
                                <a href="{{ path('back_app_article_new') }}" class="no-underline hover:underline ...">Cr√©er un article</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}