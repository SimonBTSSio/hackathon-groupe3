{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ formation.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ formation.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ formation.image }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ formation.duration }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ formation.createdAt ? formation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ formation.updatedAt ? formation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ formation.author }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_formation_index') }}">back to list</a>

    <a href="{{ path('back_formation_edit', {'id': formation.id}) }}">edit</a>

    {{ include('formation/admin/_delete_form.html.twig') }}

    <h2> Chapitres de la formation </h2>

    <ul>
        {% for chapter in formation.chapter %}
            <li>
                <a href="{{ path('back_chapter_show', {'id': chapter.id}) }}">{{ chapter.title }}</a>
                <a href="{{ path('back_chapter_edit', {'id': chapter.id}) }}">edit</a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('back_formation_new_chapter', {'id': formation.id}) }}">Create new chapter</a>

{% endblock %}
